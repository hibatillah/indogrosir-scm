@{
    ViewData["Title"] = "Dashboard";
}

<div class="card fit-screen overflow-hidden">
    <h1 class="mb-5">Dashboard</h1>
    <div class="flex h-36 gap-5 mb-5">
        @*Kiri*@
        <div class="flex-none items-center rounded-lg bg-blue-500 p-4 min-w-[200px] max-w-[240px]">
            <div class="w-10 h-10 rounded-full border overflow-hidden border-white mb-3">
                <img src="~/assets/image/user.png" class="img-cover" />
            </div>
            <h2 class="text-white font-bold">UCUP MART</h2>
            <p class="text-white">Pekanbaru</p>
        </div>
        @*Kanan*@
        @*1*@
        <div class="flex-auto bg-gray-100 rounded-lg p-4 h-full">
            <div class="bg-white rounded-lg w-10 h-8 mb-1 grid place-items-center">
                <div class="w-6 h-6 rounded-full border-2 border-blue-500 grid place-items-center">
                    <i class="bi bi-currency-dollar text-blue-500"></i>
                </div>
            </div>
            <p class="mb-1">Total Suplai</p>
            <h2 class="text-blue-500 mb-1 font-bold">Rp 8.523.000,-</h2>
            <p class="text-gray-500">Dalam bulan ini</p>
        </div>
        @*2*@
        <div class="flex-auto bg-gray-100 rounded-lg p-4 h-full">
            <div class="bg-white rounded-lg w-10 h-8 mb-1 grid place-items-center">
                <i class="bi bi-rocket-takeoff text-blue-500 stroke-2"></i>
            </div>
            <p class="mb-1">Total Produk</p>
            <h2 class="text-blue-500 mb-1 font-bold">350 Buah</h2>
            <p class="text-gray-500">Penjualan dalam bulan ini</p>
        </div>
        @*3*@
        <div class="flex-auto bg-gray-100 rounded-lg p-4 h-full">
            <div class="bg-white rounded-lg w-10 h-8 mb-1 grid place-items-center">
                <i class="bi bi-graph-up-arrow text-blue-500 stroke-2"></i>
            </div>
            <p class="mb-1">Total Penjualan</p>
            <h2 class="text-blue-500 mb-1 font-bold">430 Produk</h2>
            <p class="text-gray-500">Dalam bulan ini</p>
        </div>
    </div>
    <div class="grid grid-cols-2 gap-5">
        <div class="bg-gray-100 rounded-lg p-4 h-80">
            <div class="flex gap-5 items-center">
                <div class="bg-white rounded-lg w-10 h-8 mb-1 grid place-items-center">
                    <i class="bi bi-rocket-takeoff text-blue-500 stroke-2"></i>
                </div>
                <h2>Grafik Penjualan</h2>
            </div>
        </div>
        <div class="bg-gray-100 rounded-lg p-4 h-80">
            <div class="flex gap-5 items-center">
                <div class="bg-white rounded-lg w-10 h-8 mb-1 grid place-items-center">
                    <i class="bi bi-journal-bookmark-fill text-blue-500 stroke-2"></i>
                </div>
                <h2>Kategori Penjualan</h2>
            </div>
        </div>
    </div>
</div>