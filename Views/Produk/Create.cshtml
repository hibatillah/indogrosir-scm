@model indogrosir_tim8.Models.Produk
@inject IHttpContextAccessor httpContextaccessor

@{
    ViewData["Title"] = "Buat Produk";
    int userId = int.Parse(httpContextaccessor.HttpContext.Request.Cookies["user_id"]);
    string userRole = httpContextaccessor.HttpContext.Request.Cookies["user_role"].ToString();
}

<div class="card fit-screen">
    <div class="row justify-between">
        <h1>Tambah Produk</h1>
        <div class="row gap-2">
            <a asp-action="Index" class="btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Kembali
            </a>
        </div>
    </div>
    <div class="flex gap-10 mt-8">
        <label for="file" class="flex-none relative w-96 h-100 bg-gray-200 rounded-lg border cursor-pointer">
            <input type="file" id="file" name="file" class="hidden" />
            <div class="absolute-center text-gray-600 flex flex-col gap-2 items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <p>Tambah Gambar</p>
            </div>
        </label>
        <form asp-action="Create" class="flex-auto h-fit flex flex-wrap gap-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" value="@userId" />
            <input type="hidden" asp-for="UserRole" value="@userRole" />
            <label asp-for="Nama">
                <span>Nama</span>
                <input asp-for="Nama" placeholder="Masukkan nama produk" class="form-input capitalize" />
                <span asp-validation-for="Nama" class="warning"></span>
            </label>
            <label asp-for="Kategori">
                <span>Kategori</span>
                <input asp-for="Kategori" class="form-input capitalize" placeholder="Masukkan kategori produk" />
                <span asp-validation-for="Kategori" class="warning"></span>
            </label>
            <label asp-for="Harga">
                <span>Harga</span>
                <input asp-for="Harga" class="form-input" placeholder="Masukkan harga produk" />
                <span asp-validation-for="Harga" class="warning"></span>
            </label>
            <label asp-for="Jumlah">
                <span>Jumlah</span>
                <input asp-for="Jumlah" class="form-input" placeholder="Masukkan jumlah stok tersedia" />
                <span asp-validation-for="Jumlah" class="warning"></span>
            </label>
            <label asp-for="Minimum">
                <span>Minimum</span>
                <input asp-for="Minimum" class="form-input" placeholder="Masukkan jumlah minimum stok" />
                <span asp-validation-for="Minimum" class="warning"></span>
            </label>
            <div class="self-end">
                <input type="submit" value="Buat Produk" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
