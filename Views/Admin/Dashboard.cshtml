@model indogrosir_tim8.Models.Admin

@{
    ViewData["Title"] = "Dashboard Admin";
    var img = $"/assets/lokasi/{Model.Cabang.ToLower()}.png";
}

<div class="fit-screen flex gap-4 overflow-hidden">
    <div class="w-1/4 px-10 py-16 space-y-8 bg-white rounded-2xl shadow">
        <div class="space-y-5 w-full flex flex-col items-center">
            <div class="w-60 h-40 rounded-lg border relative bg-gray-200 overflow-hidden">
                <img src="@img" alt="profil mitra" class="img-cover" />
            </div>
            <h2 class="text-3xl font-semibold">Cabang @Model.Cabang</h2>
        </div>
        <div class="space-y-2">
            <div class="row justify-between">
                <p class="text-gray-900 text-medium">Nama</p>
                <p class="text-gray-500">@Model.Nama</p>
            </div>
            <div class="row justify-between">
                <p class="text-gray-900 text-medium">Email</p>
                <p class="text-gray-500">@Model.Email</p>
            </div>
        </div>
    </div>
    <div class="flex-auto card">
        <h1>Dashboard</h1>
        <div id="profil" class="mt-8 grid grid-cols-3 gap-5">
            
        </div>
    </div>
</div>