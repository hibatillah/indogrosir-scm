@{
    ViewData["Title"] = "Hubungi Kami";
}

<div class="card shadow fit-screen grid place-items-center">
    <div class="grid grid-cols-2 w-4/6 gap-10">
        <div class="col-span-1 order-2 h-[530px] rounded-xl overflow-hidden">
            <img src="~/assets/image/banner.png" alt="indogrosir" class="img-cover" />
        </div>
        <div class="col-span-1 order-1 pr-10">
            <form id="login" action="#" class="space-y-4">
                <h1>Tulis Pendapatmu</h1>
                <label for="nama">
                    <span>Nama</span>
                    <input type="text" id="nama" name="nama" placeholder="Masukkan Nama" class="form-input" required />
                </label>
                <label for="nohape">
                    <span>No. Hape</span>
                    <input type="tel" id="nohape" name="nohape" placeholder="Masukkan Nomor Hape" class="form-input" required />
                </label>
                <label for="Cabang">
                    <span>Cabang Indogrosir</span>
                    <select name="Cabang" placeholder="Pilih wilayah cabang" class="form-input" required>
                        <option value="Pekanbaru">Pekanbaru</option>
                        <option value="Bandung">Bandung</option>
                        <option value="Banjarmasin">Banjarmasin</option>
                        <option value="Kendari">Kendari</option>
                        <option value="Ambon">Ambon</option>
                    </select>
                </label>
                <label for="pesan">
                    <span>Pesan</span>
                    <textarea id="pesan" name="pesan" rows="4" placeholder="Tulis Pesan Anda.." class="form-input" required></textarea>
                </label>
                <button type="submit" class="w-full btn-primary">Kirim Pesan</button>
            </form>
        </div>
    </div>
</div>