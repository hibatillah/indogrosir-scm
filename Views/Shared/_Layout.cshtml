@inject IHttpContextAccessor httpContextaccessor

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light" />
    <meta name="theme-color" content="#EFEFEF">
    <meta name="author" content="hibatillah, MiftahulH23">
    <meta name="description" content="Indogrosir's website & Supply Chain Management System for Indogrosir Partners">
    <meta name="keywords" content="Enterprise, Framework, ASPNet, MVC, SCM, Redesign">
    <meta name="copyright" content="Team 8 - 3SIC">
    <meta name="og:title" content="Indogrosir">
    <meta name="og:description" content="Website & SCM System for Indogrosir Partners">
    <meta name="og:image" content="/assets/image/shot.jpg">
    <meta name="og:url" content="https://indogrosir.co.id">
    <meta name='og:site_name' content='Indogrosir'>
    <meta name="og:type" content="website">
    <meta name="og:locale" content="id_ID">
    <meta name="og:locale:alternate" content="en_US">
    <link rel="icon" href="logo.ico?v=2" />
    <title>@ViewData["Title"] - Indogrosir</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/indogrosir_tim8.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
</head>
<body>
    <header class="px-8 py-2 rounded-xl bg-white shadow flex justify-between">
        <a asp-area="" asp-controller="Home" asp-action="Index">
            <img src="assets/image/logo.png" class="h-10 pointer-events-none" alt="logo indogrosir" />
        </a>
        <nav id="menu" class="flex gap-x-3 items-center text-gray-400 select-none">

            @if (httpContextaccessor.HttpContext.Request.Cookies["user_role"] == "mitra")
            {
                @* Mitra *@
                <a id="menu-item" asp-area="" asp-controller="SCM" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-grid-fill"></i>
                    <span>Dashboard</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Produk" asp-action="Index"  class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-archive-fill"></i>
                    <span>Produk</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Pesanan" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-clipboard2-data-fill"></i>
                    <span>Pesanan</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Mitra" asp-action="Profil" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-person-circle"></i>
                    <span>Profil</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Auth" asp-action="Logout">
                    <abbr title="Logout" class="p-2 row gap-2 font-medium rounded hover:bg-red-600 hover:text-red-200">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                        </svg>
                    </abbr>
                </a>
            }
            else if (httpContextaccessor.HttpContext.Request.Cookies["user_role"] == "admin")
            {
                @* Admin *@
                <a id="menu-item" asp-area="" asp-controller="SCM" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-grid-fill"></i>
                    <span>Dashboard</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Produk" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-archive-fill"></i>
                    <span>Produk</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Pesanan" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-clipboard2-data-fill"></i>
                    <span>Pesanan</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Mitra" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-people-fill"></i>
                    <span>Mitra</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Mitra" asp-action="Profil" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-person-circle"></i>
                    <span>Profil</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Auth" asp-action="Logout">
                    <abbr title="Logout" class="p-2 row gap-2 font-medium rounded hover:bg-red-600 hover:text-red-200">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                        </svg>
                    </abbr>
                </a>
            }
            else
            {
                @* Website *@
                <a id="menu-item" asp-area="" asp-controller="Home" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-grid-fill"></i>
                    <span>Beranda</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Home" asp-action="Berita" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-bookmarks-fill"></i>
                    <span>Berita</span>
                </a>
                <a id="menu-item" asp-area="" asp-controller="Cabang" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-geo-alt-fill"></i>
                    <span>Lokasi</span>
                </a>
                <div id="menu-item" class="relative p-2 font-medium cursor-pointer dropdown">
                    <span class="row gap-2 hover:text-blue-500">
                        <i class="bi bi-building-fill"></i>
                        <span>Tentang</span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="mt-0.5 w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                        </svg>
                    </span>
                    <div id="menu-dropdown" class="hidden z-20 absolute top-10 right-0 px-4 py-3 w-44 flex flex-col gap-2 rounded-md bg-white shadow-md border">
                        <a asp-area="" asp-controller="Tentang" asp-action="Sejarah" class="hover:text-blue-500">
                            Sejarah & Visi Misi
                        </a>
                        <a asp-area="" asp-controller="Tentang" asp-action="Index" class="hover:text-blue-500">
                            Produk Bisnis
                        </a>
                        <a asp-area="" asp-controller="Tentang" asp-action="Hubungi" class="hover:text-blue-500">
                            Hubungi Kami
                        </a>
                    </div>
                </div>
                <a id="menu-item" asp-area="" asp-controller="Auth" asp-action="Index" class="p-2 row gap-2 font-medium hover:text-blue-500">
                    <i class="bi bi-person-circle"></i>
                    <span>Login</span>
                </a>
            }
        </nav>
    </header>

    <main class="space-y-4 fit-screen">
        @RenderBody()
    </main>

    @if (httpContextaccessor.HttpContext.Request.Cookies["user_role"] != "mitra" 
        && httpContextaccessor.HttpContext.Request.Cookies["user_role"] != "admin")
    {
        <footer class="px-20 py-8 h-80 rounded-2xl bg-white shadow grid grid-cols-2 gap-4">
            <div class="h-full flex flex-col justify-between">
                <div>
                    <img src="assets/image/logo.png" class="h-10 pointer-events-none" alt="logo indogrosir" />
                    <p class="mt-2 mb-5 text-gray-900">PT. Inti Cakrawala Citra</p>
                    <p class="text-gray-500">
                        Menara Indomaret <br />
                        Jl. Pantai Indah Kapuk Blvd No.1 <br />
                        Pantai Indah Kapuk, Jakarta 14470
                    </p>
                </div>
                <p class="text-gray-800">
                    &copy; 2023 Team 8 - 3SIC
                </p>
            </div>
            <div class="flex flex-col justify-between items-end">
                <div class="flex gap-20">
                    <ul class="space-y-2 text-gray-500">
                        <li>
                            <h4>Menu</h4>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Index">
                                Beranda
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Berita">
                                Berita
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Lokasi">
                                Lokasi
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Tentang" asp-action="Index">
                                Tentang
                            </a>
                        </li>
                    </ul>
                    <ul class="space-y-2 text-gray-500">
                        <li>
                            <h4>Tentang</h4>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Tentang" asp-action="Sejarah">
                                Sejarah
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Tentang" asp-action="Index">
                                Produk Bisnis
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Tentang" asp-action="Hubungi">
                                Hubungi Kami
                            </a>
                        </li>
                    </ul>
                    <ul class="space-y-2 text-gray-500">
                        <li>
                            <h4>Mitra</h4>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Auth" asp-action="Index">
                                Masuk
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-blue-500" asp-area="" asp-controller="Auth" asp-action="Signup">
                                Daftar
                            </a>
                        </li>
                    </ul>
                </div>
                <ul class="flex gap-4">
                    <li>
                        <a href="tel:0761564641" target="_blank">
                            <i class="bi bi-telephone-fill text-gray-800 hover:text-blue-500"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/officialindogrosir/" target="_blank">
                            <i class="bi bi-instagram text-gray-800 hover:text-blue-500"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://m.facebook.com/officialindogrosir/" target="_blank">
                            <i class="bi bi-facebook text-gray-800 hover:text-blue-500"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/officialigr" target="_blank">
                            <i class="bi bi-twitter-x text-gray-800 hover:text-blue-500"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const path = window.location.href
        const currentPath = path.split('//')[1]
        const allMenu = document.querySelectorAll('nav#menu > *')
        console.log('current path', currentPath.split('/')[-1])

        /* active menu */
        const activeMenu = (element) => {
            let active = 'text-blue-500'
            allMenu.forEach((menu) => menu.classList.remove(active))
            document.querySelector(element).classList.add(active)
        }

        /* dropdown tentang */
        const menuTentang = document.querySelector('#menu-item.dropdown')
        const dropTentang = document.querySelector('#menu-dropdown')
        menuTentang.addEventListener('click', () => {
            console.log('dropdown actived')
            dropTentang.classList.toggle('hidden')
        })

        /* check active page */
        const menu = document.querySelectorAll("nav#menu #menu-item");
        menu.forEach((item) => {
            item.addEventListener("click", () => {
                menu.forEach((el) => el.classList.remove("ztext-blue-500"));
                item.classList.add("text-blue-500");
            });
        });

        /*
        switch (currentPath.split('/')[1]) {
            case "SCM":
                currentPath.split('/')[2] == "Profil"
                    ? activeMenu('#menuProfil')
                    : activeMenu('#dashboard')
                break;
            case "Produk":
                activeMenu('#produk')
                break;
            case "Pesanan":
                activeMenu('#pesanan')
                break;
            case "Mitra":
                activeMenu('#mitra')
                break;
            case "Home":
                currentPath.split('/')[2] == "Berita"
                    ? activeMenu('#berita')
                    : activeMenu('#lokasi')
                break;
            case "Tentang":
                activeMenu('#menuTentang')
                break;
            case "Auth":
                activeMenu('#auth')
                break;
            default:
                activeMenu('#beranda')
                break;
        }
        */
    </script>
    @if (TempData["Message"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@TempData["Message"]');
            };
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
